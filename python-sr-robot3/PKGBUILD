# Maintainer: Student Robotics Brain Team
# Contributor: Dan Trickey
pkgname=python-sr-robot3
pkgver=2021.0.0a1.dev1
pkgrel=1
pkgdesc='Student Robotics API'
arch=('any')
url="https://github.com/srobo/sr-robot3"
license=('MIT')
depends=('python' 'python-j5' 'python-pyserial' 'python-astoria')
makedepends=('python-setuptools' 'python-dephell')
source=('https://api.github.com/repos/srobo/sr-robot3/tarball/v2021.0.0a1.dev1')
sha512sums=('3bbfae1d5c4c0baa696edf30f7b9ab605702ddded306e0d36a1d4c02d5466ad4361250769e291c5a8e7df2f920a30ac9f49826a68afba0d1d28eb408335d7932')

prepare() {
    cd $(ls ${srcdir} | grep sr-robot3)
    dephell deps convert --from pyproject.toml --to setup.py
}

package() {
  cd $(ls ${srcdir} | grep sr-robot3)
  python setup.py install --root="$pkgdir/" --optimize=1
}
