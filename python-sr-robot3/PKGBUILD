pkgname=python-sr-robot3
pkgver=2022.0.0a1
pkgrel=1
pkgdesc='Student Robotics API'
arch=('any')
url="https://github.com/srobo/sr-robot3"
license=('MIT')
depends=('python' 'python-j5' 'python-pyserial' 'python-astoria')
makedepends=('python-setuptools' 'python-dephell')
source=("https://api.github.com/repos/srobo/sr-robot3/tarball/v$pkgver")
sha512sums=('b350a745ad227ef9d988c0d360796fc2f2df453dfd5befff93a0b6c3436f538080501ba8a8ad80771e667c7f951ec8d60a99f2efa0dda51fd5f501f513061d62')

prepare() {
    cd $(ls ${srcdir} | grep sr-robot3)
    dephell deps convert --from pyproject.toml --to setup.py
}

package() {
  cd $(ls ${srcdir} | grep sr-robot3)
  python setup.py install --root="$pkgdir/" --optimize=1
}
